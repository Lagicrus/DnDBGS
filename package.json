{
  "name": "dndbgs",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@craco/craco": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "web-ext": "^7.9.0",
    "@types/chrome": "^0.0.254",
    "@types/firefox-webext-browser": "^120.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "set INLINE_RUNTIME_CHUNK=false && craco build",
    "eject": "react-scripts eject",
    "run:firefox": "web-ext run --start-url https://ledger.thegriffonssaddlebag.com/ --source-dir build",
    "run:chrome": "web-ext run --target chromium --start-url https://ledger.thegriffonssaddlebag.com/ --source-dir build",
    "build:extension": "web-ext build --source-dir build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
